
<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <style>
        body {
            height: 100vh;
        }

        .wrapper {
            display: flex;
            align-items: center;
            flex-direction: column;
            justify-content: center;
            width: 100%;
            min-height: 100%;
            padding: 20px;
        }


    </style>
</head>

<body>

    <div class="wrapper">
            <form action="/login", method="POST" id="login-form">
                <h3 class="w-100 text-start">Login</h3>
                <div class="form-group mb-2">
                    <label for="email">Username</label>
                    <input name="username" type="username" class="form-control" id="username">
                </div>
                <div class="form-group mb-2">
                    <label for="pass">Password</label>
                    <input name="pw" type="password" class="form-control" id="pass">
                </div>
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary w-100" id="log-in">Log in</button>
                </div>
            </form>

            <% if (locals.failMessage) { %>
                <h6 class="text-danger mt-3"><%= failMessage %></h6>
            <% } %>


            <a class="mt-3" href="/register">Register</a>
    </div>


    <script src="/js/bootstrap.bundle.min.js"></script>

</body>
